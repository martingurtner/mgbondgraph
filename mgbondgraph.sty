% Draw a bond between two components
% Input:
%   #1 parameters of the edge
%   #2 nodeFrom
%   #3 nodeTo
%   #4 effort label
%   #5 flow label
% Example:
%   \bond[very thick]{Se}{I}{e}{q}
\newcommand{\bond}[5][]{%
	% Calc the angle between two points
	\pgfmathanglebetweenpoints{%
	    \pgfpointanchor{#2}{center}}{%
	    \pgfpointanchor{#3}{center}}
	\pgfmathparse{ifthenelse(mod((\pgfmathresult+45),360)<=180 ,1,0)} 
	\ifdim\pgfmathresult pt= 1 pt 
		\draw [-bArrow down, auto, thick, #1] (#2) to node {#4}  (#3);
		\path [auto] (#3) to node {#5}  (#2);
	\else 
		\draw [-bArrow up, auto, thick, #1] (#2) to node {#5}  (#3);
		\path [auto] (#3) to node {#4}  (#2);
	\fi 	
}

